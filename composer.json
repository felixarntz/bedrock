{
  "name": "felixarntz/bedrock",
  "type": "project",
  "license": "GPLv2",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Felix Arntz",
      "email": "felix-arntz@leaves-and-love.net",
      "homepage": "http://leaves-and-love.net"
    },
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "autoload": {
    "psr-0": {
      "WPPRSC\\": "web/app/mu-plugins/"
    }
  },
  "require": {
    "php": ">=5.4",
    "composer/installers": "1.0.21",
    "vlucas/phpdotenv": "2.0.1",
    "johnpbloch/wordpress": "4.3",
    "afragen/github-updater": "5.0.1",
    "wpackagist-plugin/wp-multi-network": "1.6.0",
    "wpackagist-plugin/wordpress-seo": "2.3.4"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/core",
    "constants": {},
    "settings": {
      "module_auto_updater": {
        "core_major": false,
        "core_minor": true,
        "core_dev": false,
        "plugin": false,
        "theme": false,
        "translation": true
      },
      "module_client_role": {
        "display_name": "Client"
      },
      "module_content_fixes": {
        "disable_posts": false,
        "disable_comments": false,
        "disable_pingbacks": true
      },
      "module_frontend_cleanup": {
        "clean_feed_links": false,
        "clean_feed_links_extra": false,
        "clean_rsd_link": true,
        "clean_wlwmanifest_link": true,
        "clean_wp_generator": true,
        "clean_asset_versions": true,
        "clean_img_dimensions": true,
        "improve_html5_support": true
      },
      "module_security": {
        "disable_xmlrpc": true
      }
    }
  }
}
